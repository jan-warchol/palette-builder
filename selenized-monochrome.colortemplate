# Color palette {{{
# Color name         GUI            Base256     Base16 (optional)
Color: bg_bright_1 #252525 ~ Black
Color: bg_bright_2 #3b3b3b ~ DarkGrey
Color: fg_dim      #777777 ~ LightGrey
Color: fg_dim_2    #777777 ~ LightBlue
Color: fg_bright_2 #dedede ~ LightMagenta
Color: fg_bright   #dedede ~ White
Color: red         #ed4a46 ~ DarkRed
Color: green       #70b433 ~ DarkGreen
Color: yellow      #dbb32d ~ DarkYellow
Color: blue        #368aeb ~ DarkBlue
Color: magenta     #eb6eb7 ~ DarkMagenta
Color: cyan        #3fc5b7 ~ DarkCyan

# only for terminal colors
Color: br_red     rgb(255, 100,   0)        ~         LightRed
Color: br_green   rgb(100, 255,   0)        ~         LightGreen
Color: br_yellow  rgb(255, 255, 100)        ~         LightYellow
Color: br_blue    rgb(  0, 100, 255)        ~         LightBlue
Color: br_magenta rgb(255, 100, 255)        ~         LightMagenta
Color: br_cyan    rgb(100, 255, 255)        ~         LightCyan
# }}}

# Terminal colors {{{
Term colors: bg_bright_1 red green yellow blue magenta cyan fg_dim
Term colors: bg_bright_2 br_red br_green br_yellow br_blue br_magenta br_cyan fg_bright_2
# }}}



